<p id="notice"><%= notice %></p>

<h1>Pending Documents</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Player name</th>
      <th>Document type name</th>
      <th>Path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.status_name %></td>
        <td><%= document.player.name %></td>
        <td><%= document.document_type.name %></td>
        <td><%= document.path %></td>
        <td><%= link_to 'Edit', edit_documents_pending_path(document) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
